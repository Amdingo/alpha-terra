{
  "variables": {
    "build_number": "{{env `build_number`}}",
    "branch": "{{env `branch`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-ed2ac990",
    "instance_type": "t2.medium",
    "ssh_username": "alphastack",
    "ami_name": "alphastack-dev-{{timestamp}}",
    "spot_price": ".0145",
    "ssh_keypair_name": "alphastack-devops-keypair",
    "ssh_private_key_file": "/home/ubuntu/.ssh/alphastack-devops-keypair.pem"
  }],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "branch={{ user `branch` }}"
      ],
      "script": "./build_tools/scripts/init.sh"
    }
  ]
}
